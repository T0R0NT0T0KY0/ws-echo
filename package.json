{
  "name": "ws-echo",
  "version": "1.0.0",
  "description": "",
  "main": "./src/main.ts",
  "type": "module",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main.js",
    "prettier": "prettier -w src",
    "eslint:test": "eslint src migrations api",
    "eslint:fix": "eslint src migrations api --fix",
    "test": "jest  --reporters=default --reporters=jest-junit",
    "test:watch": "jest --watchAll  --reporters=default --reporters=jest-junit",
    "test:cov": "jest --coverage  --reporters=default --reporters=jest-junit",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand  --reporters=default --reporters=jest-junit",
    "test:e2e": "jest --config src/__tests__/jest-e2e.json  --reporters=default --reporters=jest-junit",
    "lint": "npx eslint \"src/**/*.ts\" --fix",
    "prepare": "pnpm run build && husky install"
  },
  "keywords": [],
  "author": "Dmitry_The_Fucke_LV",
  "license": "MIT",
  "dependencies": {
    "@nestjs/common": "9.3.12",
    "@nestjs/core": "9.3.12",
    "@nestjs/platform-express": "9.3.12",
    "@nestjs/platform-socket.io": "9.3.12",
    "@nestjs/websockets": "9.3.12",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "dotenv": "^16.0.3",
    "reflect-metadata": "0.1.13",
    "rimraf": "4.4.1",
    "rxjs": "7.5.5",
    "socket.io": "4.6.1"
  },
  "devDependencies": {
    "@nestjs/cli": "9.4.0",
    "@nestjs/schematics": "9.0.4",
    "@nestjs/testing": "9.3.12",
    "@types/express": "4.17.13",
    "@types/jest": "28.1.4",
    "@types/node": "^20.2.5",
    "@types/supertest": "2.0.12",
    "@types/ws": "8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "5.56.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsdoc": "^40.1.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.3",
    "jest": "28.1.2",
    "jest-cli": "28.1.2",
    "jest-junit": "16.0.0",
    "prettier": "^2.3.2",
    "supertest": "6.2.4",
    "ts-jest": "28.0.8",
    "ts-loader": "9.3.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.1.1",
    "typescript": "^4.7.4"
  },
  "files": [
    "lib",
    "husky.sh"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.{ts,js,md}": "prettier --write"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "testEnvironment": "node",
    "transformIgnorePatterns": [
      "node_modules/(?!@atlaskit)"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ]
  }
}
